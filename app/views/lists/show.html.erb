<div class="container my-5">
  <div class="row">
    <div class="col-6 mx-auto">
      <h1><%= @list.name %></h1>

      <div class="list-group">
        <% @list.bookmarks.each do |bookmark| %>
          <li class="list-group-item">
            <p><%= bookmark.movie.title %></p>
            <p><%= bookmark.movie.overview %></p>
            <p><%= bookmark.movie.poster_url %></p>
            <p><%= bookmark.movie.rating %></p>
            <p><%= bookmark.comment %></p>
            <%= link_to '<i class="fa-solid fa-trash"></i>'.html_safe, bookmark_path(@list), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %>
          </li>
        <% end %>
      </div>

      <%= link_to 'Back to list', lists_path %>
      <%= link_to 'Add a new bookmark', new_list_bookmark_path(@list) %>
    </div>
  </div>
</div>
