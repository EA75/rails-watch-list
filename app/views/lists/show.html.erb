<div class="container my-5">
  <div class="row">
    <div class="col 6 mx-auto">
      <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.1),rgba(0,0,0,0.1)), url('<%= cl_image_path @list.image.key, crop: :fill %>');">
          <div class="container">
            <h1><%= @list.name %></h1>
          </div>
      </div>
      <% @list.bookmarks.each do |bookmark| %>
        <div class="card-product">
          <img src='<%= bookmark.movie.poster_url %>'/>
          <div class="card-product-infos">
            <h2><%= bookmark.movie.title %></h2>
            <p><%= bookmark.movie.overview %></p>
            <p><%= bookmark.movie.rating %></p>
            <p><%= bookmark.comment %></p>
            <%= link_to '<i class="fa-solid fa-trash"></i>'.html_safe, bookmark_path(@list), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %>
          </div>
        </div>
        <% end %>

      <%= link_to 'Back to list', lists_path %>
      <%= link_to 'Add a new bookmark', new_list_bookmark_path(@list) %>
    </div>
  </div>
</div>
