<nav class="navbar navbar-light bg-light">
  <div class="container-fluid">
    <a class="navbar-brand"><i class="fa-solid fa-film"></i></a>
    <form class="d-flex">
      <%= link_to "New List", new_list_path, class: "btn btn-outline-primary"%>
    </form>
  </div>
</nav>

<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.1),rgba(0,0,0,0.1)), url(https://images.unsplash.com/photo-1594908900066-3f47337549d8?crop=entropy&cs=tinysrgb&fm=jpg&ixlib=rb-1.2.1&q=60&raw_url=true&ixid=MnwxMjA3fDB8MHxzZWFyY2h8MTd8fG1vdmllfGVufDB8fDB8fA%3D%3D&auto=format&fit=crop&w=500);">
    <div class="container">
      <h1>Save any king of movies</h1>
    </div>
</div>

<div class = "container">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h3 class="mb-0">My Lists</h3>
    <%= link_to "Create a movie list", new_list_path, class: "btn btn-flat" %>
  </div>
  <div class="cards">
    <% @lists.each do |list| %>
      <% if list.image.attached? %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.1)), url('<%= cl_image_path list.image.key, crop: :fill %>')">
        <%= link_to list.name, list_path(list)%>
        <%= link_to '<i class="fa-solid fa-trash"></i>'.html_safe, list_path(list), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %>
        </div>
      <% else %>
        <%= link_to list.name, list_path(list)%>
        <%= link_to '<i class="fa-solid fa-trash"></i>'.html_safe, list_path(list), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %>
      <% end %>
    <% end %>
  </div>
</div>
